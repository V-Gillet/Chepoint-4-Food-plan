<div class="px-3">
	{{ form_start(form) }}
	{{ form_row(form.date) }}
	{{ form_row(form.name) }}
	{{ form_row(form.description) }}
	{{ form_row(form.origin) }}
	{{ form_row(form.type) }}
	{{ form_row(form.protein) }}
	{{ form_row(form.lipid) }}
	{{ form_row(form.carb) }}
	<div class="d-flex align-items-center form-check form-switch mt-4">
		{{ form_row(form.isRecipe) }}
	</div>
	<div class="d-flex align-items-center form-check form-switch mb-3">
		{{ form_row(form.isFavourite) }}
	</div>


	<div class="d-flex justify-content-center">
		<button class="btn btn-primary mb-3">{{ button_label|default('Enregistrer') }}</button>
	</div>
	{{ form_end(form) }}
</div>
