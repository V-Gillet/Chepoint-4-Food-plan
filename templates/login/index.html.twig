{% extends 'base.html.twig' %}

{% block body %}
	{% if error %}
		<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}
	<main class="container-fluid bg-white rounded-5">
		<div class="container box-shadow rounded-4 my-4">
			<div class="d-flex flex-column align-items-center">
				<svg width="150" height="170" viewbox="0 0 133 138" fill="#45DB2E" xmlns="http://www.w3.org/2000/svg">
					<path d="M65.1239 6.70948C67.6463 12.4422 63.9774 31.7043 63.9774 31.7043C63.9774 31.7043 46.7791 21.6147 44.2567 15.8819C41.7343 10.1491 44.2567 3.49914 49.9894 0.976722C55.7222 -1.54569 62.6015 0.976722 65.1239 6.70948Z" fill="#64892F"/>
					<path d="M69.4809 32.8505H63.5189C63.5189 22.9901 69.0223 6.25049 91.0361 6.25049V12.2126C71.0861 12.2126 69.4809 31.016 69.4809 32.8505Z" fill="#947151"/>
					<path d="M66.5 31.7037C49.7603 14.7347 0 14.0468 0 62.6606C0 93.3882 36.231 137.645 52.0535 137.645C59.1621 137.645 61.6845 133.059 66.0414 133.059C70.169 133.059 71.5448 137.416 80.7172 137.416C96.5397 137.645 133 93.6175 133 62.6606C133 14.0468 83.2397 14.7347 66.5 31.7037Z" fill="#46DC2E"/>
				</svg>
				<h1 class="font-title text-primary fs-1 m-0 px-1">Food Plan</h1>
			</div>
			<form action="{{ path('app_login') }}" method="post">
				<label class="form-label fs-5" for="username">Email :</label>
				<input class="form-control border border-primary border-1" type="text" id="username" name="_username" value="{{ last_username }}">

				<label class="form-label fs-5" for="password">Mot de passe :</label>
				<input class="form-control border border-primary border-1" type="password" id="password" name="_password">
				<input
				type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
				{# If you want to control the URL the user is redirected to on success<input type="hidden" name="_target_path" value="/account"> #}
				<div class="w-50 m-auto my-4">
					<button class="btn btn-primary text-dark w-100 rounded-5 my-4" type="submit">Se connecter</button>
					<a class="btn btn-outline-primary text-dark w-100 rounded-5 mb-4" href="{{ path("app_register") }}">S'inscrire</a>
				</div>
			</form>
		</div>
	</main>
{% endblock %}
{% block navbar %}{% endblock %}
